@model Musicologist.ViewModels.ApplicationUserCourseViewModel

<div class="row">
    <div class="col-xl-3">
    </div>
    <div class="col-xl-6">
        <h1>@Model.CurrentApplicationUserCourse.Title</h1>
        <h3>@Model.CurrentApplicationUserCourse.Description</h3>
        <h3>Total XP: @Model.CurrentApplicationUserCourse.XPReward</h3>
    </div>
    <div class="col-xl-3">
    </div>
</div>

<div class="row mb-5">
    <div class="col-xl-3">
    </div>
    <div class="col-12 col-xl-6">
        @if (Model.CurrentApplicationUserCourse.IsAdded)
        {
            <a href="/ApplicationUserCourse/Index?courseId=@Model.CurrentApplicationUserCourse.Id" class="btn btn-success btn-musicologist-large ma">Continue course</a>
        }
        else
        {
            <a href="/ApplicationUserCourse/AddCourse?courseId=@Model.CurrentApplicationUserCourse.Id" class="btn btn-success btn-musicologist-large">Add to my courses</a>
        }
    </div>
    <div class="col-xl-3">
    </div>
</div>