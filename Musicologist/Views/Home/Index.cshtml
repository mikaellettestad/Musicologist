@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model Musicologist.ViewModels.CourseViewModel;

@{ string route = ""; }

<div class="row">
    <div class="col-12 col-xl-12">
        <h1 class="title">M U S I C O L O G I S T</h1>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class=" jumbotron jumbotron-fluid"></div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <h3>Our courses:</h3>
    </div>
</div>

<div class="row center">

    @if (Model.Courses != null)
    {

        @foreach (var course in Model.Courses)
        {
            if (SignInManager.IsSignedIn(User))
            {
                route = "/ApplicationUserCourse/Details?courseId=" + course.Id;
            }
            else
            {
                route = "/Course/Details?courseId=" + course.Id;
            }

            <a class="course zoom col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 mb-3" href="@route">
                <img class="course-image" src="@course.ImageUrl">
                <div class="course-title">@course.Title</div>
            </a>

        }
    }

</div>