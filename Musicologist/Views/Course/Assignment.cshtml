@model Musicologist.ViewModels.CourseViewModel

<h1>Assignment</h1>

<h3>@Model.CurrentLesson.Assignment.Title</h3>

<h3>@Model.CurrentLesson.Assignment.Question</h3>

@foreach (var answer in Model.CurrentLesson.Assignment.Answers)
{
    <a href="/Course/Answer?Id=@answer.Id">
        <button class="btn btn-success">@answer.Text</button>
    </a>

    <br />
    <br />
}